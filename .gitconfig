[alias]
    a = add
    c = commit
    ac = !git add . && git commit -m
    # need better name for this..?
    lazy = "f() { git add . && git commit $1 && git push origin HEAD; } f"

	co = checkout	
    cob = checkout -b

	br = branch
    brd = branch -d
    brD = branch -D
    # alias for renaming a branch?

	st = status
	l = log --oneline  # this could use some improvements
    df = diff

    pristine=!git reset --hard && git clean -dfx
    amend=!git commit --amend -m

    p = push
    poh = push origin HEAD
    pouh = push -u origin HEAD
    pf = push --force-with-lease

    unstage = reset --soft HEAD^
    discard = reset --hard

    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
